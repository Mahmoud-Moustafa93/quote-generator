{
  "name": "natours",
  "version": "1.0.0",
  "description": "Natours landing page",
  "main": "script.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "server": "webpack serve",
    "watch:sass": "sass sass/main.scss:css/style.css --watch",
    "compile:js": "webpack --config webpack.config.js",
    "start": "npm-run-all --parallel server watch:sass compile:js",
    "compile:sass": "sass sass/main.scss:css/style.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" css/style.css -o css/style.prefix.css",
    "compress:css": "sass css/style.prefix.css:css/style.min.css --style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css",
    "build:js": "webpack --config webpack.config.prod.js",
    "babel": "babel dist/script-webpack.js --out-file dist/script-babel.js --presets=@babel/preset-env",
    "babel-minify": "minify dist/script-babel.js --out-file dist/script-min.js --mangle.keepClassName",
    "build-final": "npm-run-all babel babel-minify"
  },
  "author": "Mahmoud Mostafa",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.22.15",
    "@babel/core": "^7.22.19",
    "@babel/preset-env": "^7.22.15",
    "autoprefixer": "^10.4.15",
    "babel-minify": "^0.5.2",
    "clean-webpack-plugin": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.29",
    "postcss-cli": "^10.1.0",
    "sass": "^1.67.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
